@model Lab4.Models.EditAgent

@{
    ViewBag.Title = "Edit";
}

<h2>редактирование данных агента</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Редактрование данных Агента</legend>

        @Html.HiddenFor( model => model.agentId)

        <div class="editor-label">
            @Html.LabelFor(model => model.agentName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.agentName)
            @Html.ValidationMessageFor(model => model.agentName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

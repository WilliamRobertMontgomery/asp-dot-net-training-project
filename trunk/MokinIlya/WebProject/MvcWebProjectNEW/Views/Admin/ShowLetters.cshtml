@model IEnumerable<MvcWebProjectNEW.Models.VesenniLetter>
@{
    ViewBag.Title = "ShowLetters";
    Layout = "~/Views/Shared/_LayoutForAdminPanel.cshtml";
}
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/CSS/AdminPanel_ForTables.css")" />
<h2>
    Просмотр сообщений</h2>
<table>
    <tr>
        <th>
            Дата
        </th>
        <th>
            Заголовок
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.DateSend.Value
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("See", "SeeLetter", new { Id = item.LetterId }) |
                @Html.ActionLink("Delete", "DeleteLetter", new { Id = item.LetterId })
            </td>
        </tr>
    }
</table>

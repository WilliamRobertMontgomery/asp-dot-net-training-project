@model IEnumerable<Lab4.Models.EditBuilder>

@{
    ViewBag.Title = "ShowBuilders";
}

<h2>Список строителей</h2>

<p>
    @Html.ActionLink("Добавить Строителя", "AddBuilder")
</p>
<table>
    <tr>        
        <th>
            builderName
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @Html.DisplayFor(modelItem => item.builderName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { builderId = item.builderId }) |
            @Html.ActionLink("Delete", "Delete", new { builderId = item.builderId })
        </td>
    </tr>
}

</table>

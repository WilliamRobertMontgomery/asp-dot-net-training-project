@model MvcWebProjectNEW.Models.VesenniTopicIntermidiate
@{
    ViewBag.Title = "Редактирование материала";
    Layout = "~/Views/Shared/_LayoutForAdminPanel.cshtml";
}
<h2>Редактирование материала</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@ViewBag.Success

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <!--<legend>VesenniMaterial</legend>-->
        @Html.HiddenFor(model => model.TopicId)

            <label for="TopicName">Тема</label>
            @Html.EditorFor(model => model.TopicName)
            @Html.ValidationMessageFor(model => model.TopicName)

        <p>
            <input type="submit" value="Редактировать тему" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("К списку задач", "Index")
</div>
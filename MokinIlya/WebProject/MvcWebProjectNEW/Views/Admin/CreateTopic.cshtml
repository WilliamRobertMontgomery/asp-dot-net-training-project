@model MvcWebProjectNEW.Models.VesenniTopic

@{
    ViewBag.Title = "Создание темы";
    Layout = "~/Views/Shared/_LayoutForAdminPanel.cshtml";
}

<h2>CreateTopic</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@ViewBag.Success

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Название темы</legend>


            @Html.HiddenFor(model => model.TopicId)

            <label for="TopicName">Название темы</label>
            @Html.EditorFor(model => model.TopicName)
            @Html.ValidationMessageFor(model => model.TopicName)

        <p>
            <input type="submit" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("К списку задач", "Index")
</div>
